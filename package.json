{
  "name": "itch-io-html5-template",
  "version": "0.1.0-b0",
  "main": "index.html",
  "author": "David <davidbrad.015@gmail.com>",
  "license": "MIT",
  "scripts": {
    "compile": "gulp build",
    "delete-dist": "yarn rimraf ./dist",
    "create-dist": "yarn mkdirp ./dist/src",
    "inline": "html-inline -i ./build/release/www/index.html -o ./dist/src/index.html",
    "build": "yarn run delete-dist && yarn run create-dist && yarn run compile && yarn run inline",
    "zip": "yarn run build -s && yarn node ./tools/zip-file.js -s && ./tools/ect-0.8.3.exe -9 -zip ./dist/game.zip"
  },
  "dependencies": {
    "archiver": "^5.3.0",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-cli": "^2.3.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-json-minify": "^1.2.2",
    "gulp-minify-html": "^1.0.6",
    "gulp-preprocess": "^3.0.3",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "html-inline": "^1.2.0",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "rollup": "^2.36.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.1.3"
  }
}
